<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - eCinema</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            margin-top: 5%;
            padding: 30px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

            .login-container:hover {
                transform: translateY(-5px);
            }

        .form-control {
            padding-left: 40px;
        }

        .input-icon {
            position: absolute;
            left: 10px;
            top: 10px;
            color: #888;
        }

        .btn-login {
            background: linear-gradient(135deg, #00c6ff, #0072ff);
            border: none;
            color: white;
            font-weight: bold;
            padding: 10px;
            border-radius: 50px;
            transition: all 0.3s;
        }

            .btn-login:hover {
                background: linear-gradient(135deg, #0072ff, #00c6ff);
                transform: scale(1.05);
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            }

        .error-message {
            display: none; /* إخفاء الرسالة افتراضيًا */
            padding: 10px;
            border-radius: 8px;
            color: white;
            background: linear-gradient(135deg, #ff4e50, #f9d423);
            font-weight: bold;
            text-align: center;
            margin-bottom: 15px;
            animation: fadeIn 0.5s ease-in-out;
        }

            .error-message i {
                margin-right: 8px;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center">
        <div class="login-container col-md-5">
            <h4 class="text-center mb-4">Log in to your account</h4>

            @if (TempData["Error"] != null)
            {
                <div class="error-message" id="error-message">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                </div>
            }

            <form action="/Account/Login" method="post">
                <div class="mb-3 position-relative">
                    <i class="fas fa-envelope input-icon"></i>
                    <input type="email" class="form-control" name="EmailAddress" placeholder="Email Address" required>
                </div>
                <div class="mb-3 position-relative">
                    <i class="fas fa-lock input-icon"></i>
                    <input type="password" class="form-control" name="Password" placeholder="Password" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-login">Log in</button>
                </div>
                <div class="text-center mt-3">
                    <a href="/Movies/Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // عرض رسالة الخطأ فقط عند الحاجة
        document.addEventListener("DOMContentLoaded", function () {
            var errorMessage = document.getElementById("error-message");
            if (errorMessage) {
                errorMessage.style.display = "block";
            }
        });
    </script>

</body>
</html>
