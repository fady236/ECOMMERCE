@model Cinema

@{
    ViewData["Title"] = "Create a new Cinema";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h1 class="text-center mb-4">Create a new Cinema</h1>

        <!-- الصورة مخفية عند تحميل الصفحة -->
        <div class="form-group text-center mb-4">
            <img id="CinemaLogoPreview" class="border border-info rounded-circle shadow-lg d-none"
                 style="max-width: 150px; height: 150px; object-fit: cover;"
                 alt="Cinema Logo" />
        </div>

        <form asp-action="Create" method="post">
            <div class="form-group mb-4">
                <label asp-for="Logo" class="control-label mb-2"></label>
                <input asp-for="Logo" class="form-control" id="CinemaLogoUrl" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label mb-2"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label mb-2"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-3">
                <button type="submit" class="btn btn-primary">Save Cinema</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var imageUrl = $("#CinemaLogoUrl").val();

            if (imageUrl.trim() !== "") {
                $("#CinemaLogoPreview").attr("src", imageUrl).removeClass("d-none");
            }

            $("#CinemaLogoUrl").on("input", function () {
                var newUrl = $(this).val().trim();

                if (newUrl !== "") {
                    $("#CinemaLogoPreview").attr("src", newUrl).removeClass("d-none");
                } else {
                    $("#CinemaLogoPreview").addClass("d-none");
                }
            });
        });
    </script>
}
