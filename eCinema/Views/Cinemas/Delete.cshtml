@model Cinema

@{
    ViewData["Title"] = "Delete Cinema";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h1 class="text-center mb-4">Delete Confirmation for @Model.Name</h1>

        <!-- الصورة مخفية عند تحميل الصفحة -->
        <div class="form-group text-center mb-4">
            <img id="CinemaPicturePreview" class="border border-info rounded shadow-lg d-none"
                 style="max-width: 150px; height: 150px; object-fit: cover;"
                 alt="Cinema Logo" />
        </div>

        <div class="form-group mb-4">
            <label asp-for="Logo" class="control-label mb-2"></label>
            <input asp-for="Logo" class="form-control" id="CinemaPictureUrl" readonly />
            <span asp-validation-for="Logo" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Name" class="control-label mb-2"></label>
            <input asp-for="Name" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Description" class="control-label mb-2"></label>
            <input asp-for="Description" class="form-control" readonly />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group d-flex justify-content-between mt-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="btn btn-danger float-right" />
            </form>

            <a class="btn btn-outline-secondary" asp-action="Index">Show All Cinemas</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var imageUrl = $("#CinemaPictureUrl").val();

            if (imageUrl.trim() !== "") {
                $("#CinemaPicturePreview").attr("src", imageUrl).removeClass("d-none");
            }

            $("#CinemaPictureUrl").on("input", function () {
                var newUrl = $(this).val().trim();

                if (newUrl !== "") {
                    $("#CinemaPicturePreview").attr("src", newUrl).removeClass("d-none");
                } else {
                    $("#CinemaPicturePreview").addClass("d-none");
                }
            });
        });
    </script>
}
