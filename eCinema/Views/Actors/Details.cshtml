@model Actor

@{
    ViewData["Title"] = "Actor Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Details for @Model.FullName</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        /* ضبط الصفحة بالكامل ليكون المحتوى في المنتصف */
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(45deg, #141e30, #243b55);
            color: white;
            font-family: 'Poppins', sans-serif;
        }

        /* تصميم البطاقة */
        .card-container {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            padding: 30px;
            text-align: center;
            width: 350px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease-in-out;
        }

            .card-container:hover {
                transform: scale(1.05);
            }

        /* صورة البروفايل */
        .profile-img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #ffcc00;
            transition: 0.3s;
        }

            .profile-img:hover {
                border-color: #ff6600;
                transform: rotate(5deg);
            }

        /* النصوص */
        .title {
            font-size: 20px;
            font-weight: bold;
            margin-top: 10px;
            color: #ffcc00;
        }

        .bio-text {
            font-size: 14px;
            color: #ddd;
            margin-bottom: 20px;
        }

        /* زرار في وسط البطاقة */
        .btn-custom {
            background: #ffcc00;
            color: black;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: bold;
            transition: 0.3s;
            border: none;
            display: block;
            margin: 10px auto 0 auto;
            width: 50%;
        }

            .btn-custom:hover {
                background: #ff6600;
                color: white;
                transform: scale(1.1);
            }
    </style>
</head>
<body>

    <div class="card-container">
        <img id="ProfilePicturePreview" class="profile-img d-none" alt="Profile Picture" />
        <h2 class="title">@Model.FullName</h2>
        <p class="bio-text">@Model.Biography</p>

        <a class="btn btn-custom" asp-action="Index">Show All</a>

        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <a class="btn btn-success btn-sm mt-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
    </div>

    <script>
        $(document).ready(function () {
            var imageUrl = "@Model.ProfilePicUrl";

            if (imageUrl.trim() !== "") {
                $("#ProfilePicturePreview").attr("src", imageUrl).removeClass("d-none");
            }
        });
    </script>

</body>
</html>
