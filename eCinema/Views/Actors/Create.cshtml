@model Actor

@{
    ViewData["Title"] = "Create a new Actor";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h1 class="text-center mb-4">Create a new Actor</h1>

        <!-- الصورة مخفية عند تحميل الصفحة -->
        <div class="form-group text-center mb-4">
            <img id="ProfilePicturePreview" class="border border-info rounded-circle shadow-lg d-none"
                 style="max-width: 150px; height: 150px; object-fit: cover;"
                 alt="Profile Picture" />
        </div>

        <form asp-action="Create" method="post">
            <div class="form-group mb-4">
                <label asp-for="ProfilePicUrl" class="control-label mb-2"></label>
                <input asp-for="ProfilePicUrl" class="form-control" id="ProfilePictureUrl" />
                <span asp-validation-for="ProfilePicUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="FullName" class="control-label mb-2"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Biography" class="control-label mb-2"></label>
                <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>

            

            <div class="form-group text-center mt-3">
                <button type="submit" class="btn btn-primary">Save Actor</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var imageUrl = $("#ProfilePictureUrl").val();

            if (imageUrl.trim() !== "") {
                $("#ProfilePicturePreview").attr("src", imageUrl).removeClass("d-none");
            }

            $("#ProfilePictureUrl").on("input", function () {
                var newUrl = $(this).val().trim();

                if (newUrl !== "") {
                    $("#ProfilePicturePreview").attr("src", newUrl).removeClass("d-none");
                } else {
                    $("#ProfilePicturePreview").addClass("d-none");
                }
            });
        });
    </script>
}
